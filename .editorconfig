# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
insert_final_newline = true

[*.{php,phtml}]
indent_style = space
indent_size = 4

[*.{scss,css,less}]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[.{html,txt,md}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.sh]
end_of_line = lf
indent_style = space
indent_size = 4

[.htaccess]
end_of_line = lf
indent_style = space
indent_size = 4

[.gitmodules]
# To agree with git submodule generated lines.
indent_style = tab
indent_size = 4

[skin/frontend/*/*/js/src/bundles/global/app.js]
# This is how it's indented, so we're keeping it.
indent_size = 4

[**/node_modules/**]
indent_style = ignore
indent_size = ignore

[**/vendor/**]
indent_style = ignore
indent_size = ignore

[**/dist/**]
indent_style = ignore
indent_size = ignore

[skin/frontend/maddie/default/scss/module/_modaal.scss]
indent_style = tab
indent_size = 2
tab_width = 2
